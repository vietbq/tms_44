<h1><%= @title_for_layout  %></h1>
<hr>
<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th><%= t "user_subjects.subject" %></th>
      <th><%= t "user_subjects.course" %></th>
      <th><%= t "user_subjects.start" %></th> 
      <th><%= t "user_subjects.end" %></th>
      <th><%= t "user_subjects.status" %></th>
    </tr>
  </thead>
  <tbody>
    <% @user_subjects.each_with_index do |user_subject,index| %>
      <% subject_status user_subject.status %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= link_to user_subject.course_subject.subject.name, user_subject %></td>
        <td>
          <%= link_to user_subject.course_subject.course.name,
            user_subject.course_subject.course %>
        </td>
        <td>
          <%= user_subject.course_subject.course.start_date %>
        </td>
        <td>
          <%= user_subject.course_subject.course.end_date %>
        </td>
        <td><%= label_tag @status_text, nil, class: @label_class %></td>
      </tr>
    <% end %>
  </tbody>
</table>
